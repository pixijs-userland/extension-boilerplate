{
  "name": "pixi-plugin-example",
  "version": "2.0.0",
  "description": "Example of PixiJS plugin",
  "author": "Ivan Popelyshev",
  "contributors": [
    "Ivan Popelyshev <ivan.popelyshev@gmail.com>"
  ],
  "main": "./dist/pixi-plugin-example.js",
  "module": "./lib/pixi-plugin-example.es.js",
  "bundle": "./dist/pixi-plugin-example.umd.js",
  "namespace": "PIXI.example",
  "types": "./index.d.ts",
  "homepage": "http://www.pixijs.com/",
  "bugs": "https://github.com/pixijs/pixi-plugin-example/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixijs/pixi-plugin-example.git"
  },
  "scripts": {
    "clean": "rimraf dist/* lib/* compile",
    "start": "run-s watch",
    "watch": "rollup -cw",
    "prebuild": "run-s clean types",
    "build": "rollup -c",
    "postbuild": "run-s build:types",
    "build:prod": "cross-env NODE_ENV=production run-s build",
    "prebuild:types": "rimraf compile",
    "build:types": "tsc --outDir compile && api-extractor run",
    "lint": "eslint ./src",
    "types": "tsc -noEmit",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "postversion": "run-s build:prod",
    "postpublish": "git push && git push --tags",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  },
  "clean-package": {
    "indent": 2,
    "remove": [
      "clean-package",
      "scripts",
      "engines",
      "devDependencies",
      "eslintConfig"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@pixi/eslint-config"
    ],
    "rules": { "linebreak-style": 0 }
  },
  "files": [
    "dist/",
    "lib/",
    "index.d.ts",
    "global.d.ts",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "peerDependencies": {
    "@pixi/constants": "^6.1.0",
    "@pixi/core": "^6.1.0",
    "@pixi/display": "^6.1.0",
    "@pixi/math": "^6.1.0",
    "@pixi/mesh": "^6.1.0",
    "@pixi/utils": "^6.1.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "7.33.6",
    "@pixi-build-tools/rollup-configurator": "~1.0.11",
    "@pixi/constants": "^6.1.0",
    "@pixi/core": "^6.1.0",
    "@pixi/display": "^6.1.0",
    "@pixi/eslint-config": "^2.0.1",
    "@pixi/math": "^6.1.0",
    "@pixi/mesh": "^6.1.0",
    "@pixi/utils": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "clean-package": "^1.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "npm-run-all": "^4.1.5",
    "prepend": "=1.0.2",
    "rimraf": "^2.5.3",
    "rollup": "^2.50.5",
    "tslib": "^2.0.1",
    "typescript": "^4.3.2"
  }
}
